<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_background"
    tools:context=".RankDescriptionActivity">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/teamnovaYellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/thumb_path_img"


        />


    <ImageView
        android:id="@+id/thumb_path_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/play_img_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/play_icon"
        app:layout_constraintTop_toTopOf="@+id/thumb_path_img"
        app:layout_constraintLeft_toLeftOf="@+id/thumb_path_img"
        app:layout_constraintRight_toRightOf="@+id/thumb_path_img"
        app:layout_constraintBottom_toBottomOf="@+id/thumb_path_img"

        />


    <ImageView
        android:id="@+id/writer_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/rank_writer_icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/thumb_path_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/writer_txt"
        />

    <TextView
        android:id="@+id/writer_txt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/thumb_path_img"
        app:layout_constraintLeft_toRightOf="@+id/writer_icon"
        app:layout_constraintRight_toLeftOf="@+id/like_icon"
        android:gravity="center"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text="팀노바4기10월김무개"
        />

    <ImageView
        android:id="@+id/like_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/like_icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/thumb_path_img"
        app:layout_constraintLeft_toRightOf="@+id/writer_txt"
        app:layout_constraintRight_toLeftOf="@+id/like_txt"
        />

    <TextView
        android:id="@+id/like_txt"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="123"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/like_icon"
        app:layout_constraintRight_toLeftOf="@+id/reply_icon"
        app:layout_constraintTop_toBottomOf="@+id/thumb_path_img" />

    <ImageView
        android:id="@+id/reply_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/reply_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/like_txt"
        app:layout_constraintRight_toLeftOf="@+id/reply_txt"
        app:layout_constraintTop_toBottomOf="@+id/thumb_path_img" />

    <TextView
        android:id="@+id/reply_txt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/thumb_path_img"
        app:layout_constraintLeft_toRightOf="@+id/reply_icon"
        app:layout_constraintRight_toLeftOf="@+id/view_icon"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text="123"
        />

    <ImageView
        android:id="@+id/view_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/view_icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/thumb_path_img"
        app:layout_constraintLeft_toRightOf="@+id/reply_txt"
        app:layout_constraintRight_toLeftOf="@+id/view_txt"
        />

    <TextView
        android:id="@+id/view_txt"
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/thumb_path_img"
        app:layout_constraintLeft_toRightOf="@+id/view_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="11sp"
        android:textStyle="bold"
        android:text="38831"
        />

    <Button
        android:id="@+id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="닫기"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_txt"/>

</androidx.constraintlayout.widget.ConstraintLayout>